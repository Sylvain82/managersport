{% extends 'base.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block body %}

    <h1>Calendrier</h1>

    <div class="container">

        {%  for calendrier in calendrier %}
        {%  if (calendrier.afficher) %}

            <div class="col-md-4 mt-5 mb-3">
                <div class="card">

                    <div class="card-body">
                        <h2 class="card-title">{{ calendrier.type }}
                        <h2 class="card-title">{{ calendrier.equipe }} - {{ calendrier.adversaire }}
                        <h3 class="card-title">{{ calendrier.heureBis.format('d-m-Y Ã  H:i') }} <br>
                            <a href="{{ calendrier.lieu }}" class="card-title">{{ calendrier.stade }}</a>
                    </div>
                </div>

            </div>

        {% endif %}
        {% endfor %}

    </div>
{% endblock %}
