{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
    <style>
        .comptetitre h1{
            margin-top: 80px;
        }
    </style>

    <div class="text-center comptetitre">

        <h1>Bienvenue sur Manager Sport {{ app.user.firstname }} {{ app.user.lastname }}</h1>
        <h3>Consultez toutes les infos relatives à votre club</h3>

    <div class="col-md-4 mt-5 mb-3">
        <div class="card">

            <h3><a class="card-title" href="{{ path('home') }}">Accueil</a></h3>

        </div>
    </div>

        <div class="col-md-4 mt-5 mb-3">
            <div class="card">

                <h3><a class="card-title" href="{{ path('players') }}">Les effectifs</a></h3>

            </div>
        </div>

        <div class="col-md-4 mt-5 mb-3">
            <div class="card">

                <h3><a class="card-title" href="{{ path('calendrier') }}">Le calendrier</a></h3>

            </div>
        </div>

        <div class="col-md-4 mt-5 mb-3">
            <div class="card">

                <h3><a class="card-title" href="{{ path('media') }}">Médias</a></h3>

            </div>
        </div>

        <div class="col-md-4 mt-5 mb-3">
            <div class="card">

                {% if is_granted('ROLE_ADMIN') %}
                    <h3>Vous êtes administrateur  ➡️ <a class="card-title" href="{{ path('admin') }}">  Gestion de votre club ?</a></h3>
                {% endif %}

            </div>
        </div>


    </div>
{% endblock %}